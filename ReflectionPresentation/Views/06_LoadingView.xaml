<UserControl x:Class="ReflectionPresentation.Views.LoadingView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:ViewModels="clr-namespace:ReflectionPresentation.ViewModels"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
  <UserControl.DataContext>
    <ViewModels:LoadingViewModel/>
  </UserControl.DataContext>
  <DockPanel>
    <StackPanel>
      <Button Command="{Binding LoadInNewDomain, Mode=OneWay}">
        New Domain
      </Button>
      <Button Command="{Binding LoadInSameDomain, Mode=OneWay}">
        Same Domain
      </Button>
    </StackPanel>
    <TextBox Text="{Binding Text}"/>
  </DockPanel>
</UserControl>
